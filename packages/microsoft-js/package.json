{
  "name": "@zerobias-org/types-microsoft-js",
  "version": "1.0.3",
  "description": "JS types for Microsoft services",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist/ .docs/ generated/",
    "generate": "npm run generate:code",
    "transpile": "tsc",
    "build": "npm run generate && npm run transpile",
    "test": "mocha --inline-diffs --reporter=list test/*.ts",
    "test:watch": "npm run test -- --watch --reporter=min",
    "docs:tsdoc": "typedoc --plugin typedoc-plugin-markdown --out .docs",
    "docs:combine": "concat-md --toc --decrease-title-levels --dir-name-as-title .docs > README.md",
    "docs": "npm run docs:tsdoc && npm run docs:combine",
    "version": "npm run generate:badge && git add version.svg",
    "generate:badge": "npx badge $(yq -oy e .name package.json) $(npm run -s get-version) :red @flat > version.svg",
    "generate:code": "JAVA_OPTS=\"${JAVA_OPTS} -DmicrosoftTypesSource=../../src\" hub-generator generate -g hub-module --additional-properties supportsES6=true -p skipHubImpl=true -i ../../node_modules/@zerobias-org/types-microsoft/models.yml -o generated/ && ./bin/fix-generated-esm.sh generated",
    "get-version": "node -p \"require('./package.json').version\"",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "author": "team@zerobias.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:zerobias-org/types.git",
    "directory": "packages/microsoft-js"
  },
  "publishConfig": {
    "registry": "https://pkg.zerobias.org/"
  },
  "files": [
    "dist/src",
    "dist/generated",
    "*.md",
    "bom.json"
  ],
  "dependencies": {
    "@zerobias-org/types-core-js": "^1.0.3",
    "@zerobias-org/types-microsoft": "^1.0.3"
  }
}
