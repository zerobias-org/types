{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "parallel": 4,
  "cacheDirectory": ".nx/cache",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/publish.yml"]
  },
  "targetDefaults": {
    "clean": {
      "cache": false
    },
    "transpile": {
      "dependsOn": ["^transpile", "generate"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/build"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": true
    },
    "generate:bom": {
      "cache": false
    },
    "docs": {
      "dependsOn": ["transpile"],
      "cache": true
    },
    "test": {
      "dependsOn": ["transpile"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["transpile"],
      "inputs": ["default", "^production"],
      "cache": true
    }
  }
}
